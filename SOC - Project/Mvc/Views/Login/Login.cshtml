        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        color: white;
    }

    .brand-content {
        max-width: 480px;
        text-align: center;
    }

    .logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.2rem;
        margin-bottom: 2.5rem;
    }

    .logo-icon {
        color: white;
        opacity: 0.95;
    }

    .logo h1 {
        font-size: 2.8rem;
        font-weight: 800;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .brand-tagline {
        font-size: 1.3rem;
        opacity: 0.85;
        margin-bottom: 2.5rem;
        line-height: 1.7;
        font-weight: 300;
    }

    .features {
        display: grid;
