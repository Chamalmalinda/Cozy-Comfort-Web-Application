        justify-items: center;
    }

    .feature {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.8rem;
        font-size: 1rem;
        opacity: 0.9;
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 10px;
    }

    .feature-icon {
        font-size: 1.8rem;
    }

    .login-form-container {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: white;
        position: relative;
    }

        .login-form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255,245,245,0.9) 0%, rgba(255,235,235,0.85) 100%);
            backdrop-filter: blur(15px);
        }

    .login-form-wrapper {
        position: relative;
        z-index: 3;
        width: 100%;
        max-width: 400px;
        padding: 2.5rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.7);
    }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .form-header h2 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #2d1b4e;
            margin-bottom: 0.6rem;
        }

        .form-header p {
            color: #7b6b9a;
            font-size: 0.95rem;
        }

    .form-group {
        margin-bottom: 1.8rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 1.2rem;
        z-index: 2;
        color: #ff8e53;
        transition: color 0.3s ease;
    }

    .form-input {
        width: 100%;
        padding: 1rem 1rem 1rem 3.5rem;
        border: 2px solid #ffe5d9;
        border-radius: 10px;
        font-size: 1rem;
        background: #fff7f0;
        transition: all 0.3s ease;
        outline: none;
    }

        .form-input:focus {
            border-color: #ff6b6b;
            background: white;
            box-shadow: 0 0 0 4px rgba(255, 107, 107, 0.15);
        }

            .form-input:focus + .form-label,
            .input-wrapper.focused .form-label {
                transform: translateY(-2.8rem) scale(0.9);
                color: #ff6b6b;
                background: white;
                padding: 0 0.4rem;
            }

            .form-input:focus ~ .input-icon,
            .input-wrapper.focused .input-icon {
                color: #ff6b6b;
            }

    .form-label {
        position: absolute;
        left: 3.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #ff8e53;
        font-size: 0.95rem;
        pointer-events: none;
        transition: all 0.3s ease;
        z-index: 1;
    }

    .password-toggle {
        position: absolute;
        right: 1.2rem;
        background: none;
        border: none;
        color: #ff8e53;
        cursor: pointer;
        padding: 0;
        transition: color 0.3s ease;
    }

        .password-toggle:hover {
            color: #ff6b6b;
        }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.8rem;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        cursor: pointer;
        font-size: 0.85rem;
        color: #7b6b9a;
    }

        .checkbox-wrapper input[type="checkbox"] {
            display: none;
        }

    .checkmark {
        width: 16px;
        height: 16px;
        border: 2px solid #ffe5d9;
        border-radius: 5px;
        margin-right: 0.6rem;
        position: relative;
        transition: all 0.3s ease;
    }

    .checkbox-wrapper input[type="checkbox"]:checked + .checkmark {
        background: #ff6b6b;
        border-color: #ff6b6b;
    }

        .checkbox-wrapper input[type="checkbox"]:checked + .checkmark::after {
            content: '✓';
            position: absolute;
            top: -3px;
            left: 2px;
            color: white;
            font-size: 11px;
            font-weight: bold;
        }

    .forgot-password {
        color: #ff6b6b;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .forgot-password:hover {
            color: #c71585;
        }

    .btn-login {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #ff6b6b 0%, #c71585 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        transition: all 0.3s ease;
        margin-bottom: 1.8rem;
    }

        .btn-login:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 20px rgba(255, 107, 107, 0.2);
        }

        .btn-login:active {
            transform: scale(1);
        }

    .form-footer {
        text-align: center;
        color: #7b6b9a;
    }

        .form-footer p {
            margin-bottom: 0.6rem;
        }

    .create-account-link {
        color: #ff6b6b;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .create-account-link:hover {
            color: #c71585;
        }

    .alert {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem;
        border-radius: 10px;
        margin-top: 1rem;
        font-size: 0.85rem;
    }

    .alert-success {
        background: rgba(72, 187, 120, 0.15);
        color: #2f855a;
        border: 1px solid rgba(72, 187, 120, 0.3);
    }

    .alert-error {
        background: rgba(229, 62, 62, 0.15);
        color: #9b2c2c;
        border: 1px solid rgba(229, 62, 62, 0.3);
    }

    .field-error {
        color: #e53e3e;
        font-size: 0.8rem;
        margin-top: 0.4rem;
        display: block;
    }

    .input-validation-error {
        border-color: #e53e3e !important;
        box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.15) !important;
    }

    /* Mobile Responsiveness */
    @@media (max-width: 1024px) {
        .login-content {
            flex-direction: column;
        }

        .login-brand {
            min-height: 35vh;
            padding: 1.8rem;
        }

        .logo h1 {
            font-size: 2.2rem;
        }

        .brand-tagline {
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .features {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.8rem;
        }
    }

    @@media (max-width: 768px) {
        .login-form-wrapper {
            padding: 2rem 1.2rem;
            margin: 1.2rem;
            border-radius: 14px;
        }

        .form-header h2 {
            font-size: 1.6rem;
        }

        .brand-content {
            max-width: 360px;
        }

        .logo {
            flex-direction: column;
            Moderation: none;
            gap: 0.8rem;
        }

            .logo h1 {
                font-size部分: none;
                font-size: 1.6rem;
            }
    }

    @@media (max-width: 480px) {
