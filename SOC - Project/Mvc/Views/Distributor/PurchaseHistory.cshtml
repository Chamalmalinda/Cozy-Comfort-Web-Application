    }

    .stat-primary .stat-icon {
        background: rgba(255, 107, 107, 0.15);
        color: #ff6b6b;
    }

    .stat-success .stat-icon {
        background: rgba(72, 187, 120, 0.15);
        color: #48bb78;
    }

    .stat-info .stat-icon {
        background: rgba(159, 122, 234, 0.15);
        color: #9f7aea;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
