        z-index: 1000;
        backdrop-filter: blur(15px);
        max-width: 360px;
    }

    .toast-success {
        background: rgba(72, 187, 120, 0.9);
        color: white;
        border: 1px solid rgba(72, 187, 120, 0.3);
    }

    .toast-error {
        background: rgba(229, 62, 62, 0.9);
        color: white;
        border: 1px solid rgba(229, 62, 62, 0.3);
    }

