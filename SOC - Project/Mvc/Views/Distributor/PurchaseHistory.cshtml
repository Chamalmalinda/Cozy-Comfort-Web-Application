        .breadcrumb-link:hover {
            color: #c71585;
        }

    .breadcrumb-separator {
        color: #7b6b9a;
    }

    .breadcrumb-current {
        color: #7b6b9a;
    }

    .header-actions {
        display: flex;
        gap: 1.2rem;
    }

    .btn {
