        flex-direction: column;
        gap: 0.8rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #2d1b4e;
    }

        .summary-row.total-row {
            border-top: 1px solid rgba(255, 107, 107, 0.2);
            padding-top: 0.8rem;
            font-weight: 700;
            font-size: 1.1rem;
            color: #c71585;
        }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.2rem;
    }

    .btn-primary, .btn-secondary {
        padding: 1rem 1.8rem;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff6b6b 0%, #c71585 100%);
        color: white;
    }

        .btn-primary:hover:not(:disabled) {
            transform: scale(1.02);
            box-shadow: 0 8px 20px rgba(255, 107, 107, 0.2);
            color: white;
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

    .btn-secondary {
        background: #fff7f0;
        color: #7b6b9a;
        border: 2px solid #ffe5d9;
    }

        .btn-secondary:hover {
            background: #ffe5d9;
            color: #2d1b4e;
            transform: translateY(-2px);
            text-decoration: none;
        }

    .alert {
        position: fixed;
        top: 2rem;
        right: 2rem;
        z-index: 1000;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        font-size: 0.9rem;
        max-width: 400px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .alert-success {
        background: rgba(72, 187, 120, 0.9);
        color: white;
        border: 1px solid rgba(72, 187, 120, 0.3);
    }

    .alert-error {
        background: rgba(229, 62, 62, 0.9);
        color: white;
        border: 1px solid rgba(229, 62, 62, 0.3);
    }

    .field-error {
        color: #e53e3e;
        font-size: 0.8rem;
        margin-top: 0.4rem;
        display: block;
    }

