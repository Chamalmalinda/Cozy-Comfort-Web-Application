        margin: 0 auto;
    }

    .breadcrumb-nav {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        margin-bottom: 2rem;
        color: rgba(255, 255, 255, 0.85);
        font-size: 0.95rem;
    }

    .breadcrumb-item a {
        color: rgba(255, 255, 255, 0.85);
        text-decoration: none;
        transition: color 0.3s ease;
    }

