    }

    .info-item {
        background: #fff7f0;
        padding: 1rem;
        border-radius: 10px;
        border-left: 4px solid #ff8e53;
        transition: transform 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-2px);
        }

    .info-label {
        display: block;
        color: #7b6b9a;
        font-size: 0.85rem;
        margin-bottom: 0.4rem;
    }

    .info-value {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
        color: #2d1b4e;
    }

        .info-value.price {
            color: #c71585;
        }

        .info-value.quantity {
            color: #ff6b6b;
        }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.8rem;
        margin-bottom: 1.8rem;
    }

    .form-group {
        position: relative;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .form-input {
        width: 100%;
        padding: 1rem;
        border: 2px solid #ffe5d9;
        border-radius: 10px;
        font-size: 1rem;
        background: #fff7f0;
        transition: all 0.3s ease;
        outline: none;
    }

        .form-input:focus {
            border-color: #ff6b6b;
            background: white;
            box-shadow: 0 0 0 4px rgba(255, 107, 107, 0.15);
        }

            .form-input:focus + .form-label,
            .input-wrapper.focused .form-label {
                transform: translateY(-2.8rem) scale(0.9);
                color: #ff6b6b;
                background: white;
                padding: 0 0.4rem;
            }

        .form-input.error {
            border-color: #e53e3e;
            box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.15);
        }

    .form-label {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #ff8e53;
        font-size: 0.95rem;
        pointer-events: none;
        transition: all 0.3s ease;
        z-index: 1;
    }

    .total-display {
        background: #fff7f0 !important;
        color: #c71585;
        font-weight: 700;
        font-size: 1.2rem;
        cursor: default;
        padding: 1rem;
        border-radius: 10px;
        border: 2px solid #ffe5d9;
    }

    .order-summary {
        background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(199, 21, 133, 0.1) 100%);
        border: 1px solid rgba(255, 107, 107, 0.2);
