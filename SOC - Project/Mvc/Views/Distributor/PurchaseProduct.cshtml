        padding: 1.2rem;
        margin-bottom: 1.8rem;
    }

    .summary-header {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        color: #ff6b6b;
        font-weight: 600;
        margin-bottom: 1rem;
    }

