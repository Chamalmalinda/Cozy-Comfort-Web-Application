@{
    ViewBag.Title = "Manufacturer Dashboard";
}

<div class="dashboard-container">
    <!-- Background Elements -->
    <div class="bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
    </div>

    <!-- Modern Navbar -->
    <nav class="modern-navbar">
        <div class="navbar-content">
            <div class="navbar-brand">
                <div class="brand-logo">
                    <svg width="32" height="32" viewBox="0 0 48 48" fill="none">
                        <path d="M24 4L44 14V34L24 44L4 34V14L24 4Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                        <path d="M24 4V44" stroke="currentColor" stroke-width="2" />
                        <path d="M4 14L44 34" stroke="currentColor" stroke-width="2" />
                        <path d="M44 14L4 34" stroke="currentColor" stroke-width="2" />
                    </svg>
                    <span>Cozy Comfort</span>
                </div>
                <span class="portal-text">Manufacturer Portal</span>
            </div>
            <div class="navbar-actions">
                <div class="user-info">
                    <div class="user-avatar">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </div>
                    <span class="welcome-text">Welcome, @Session["UserName"]</span>
                </div>
                <a href="@Url.Action("Logout", "Login")" class="logout-btn">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16,17 21,12 16,7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Dashboard Content -->
    <div class="dashboard-content">
        <!-- Header Section -->
        <div class="dashboard-header">
            <div class="header-content">
                <h1 class="dashboard-title">Manufacturer Dashboard</h1>
                <p class="dashboard-subtitle">Manage your inventory and track your business performance</p>
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="dashboard-grid">
            <!-- Main Action Card -->
            <div class="main-actions">
                <div class="action-card primary-card">
                    <div class="card-header">
                        <div class="card-icon">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                                <polyline points="3.27,6.96 12,12.01 20.73,6.96"></polyline>
                                <line x1="12" y1="22.08" x2="12" y2="12"></line>
                            </svg>
                        </div>
                        <div class="card-title">
                            <h3>My Inventory</h3>
                            <p>Manage your product catalog efficiently</p>
                        </div>
                    </div>
                    <div class="card-content">
                        <p>Add, edit, and delete products from your inventory. Track stock levels and manage product details with ease.</p>
                        <div class="card-features">
                            <div class="feature-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12"></polyline>
                                </svg>
                                <span>Real-time Updates</span>
                            </div>
                            <div class="feature-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12"></polyline>
                                </svg>
                                <span>Bulk Operations</span>
                            </div>
                            <div class="feature-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12"></polyline>
                                </svg>
                                <span>Advanced Filtering</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-actions">
                        <a href="@Url.Action("Index", "Manufacturer")" class="btn-primary">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            View Inventory
                        </a>
                        <a href="~/Manufacturer/AddOrEdit" class="btn-secondary">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="3"></circle>
                                <path d="M12 1v6m0 6v6m6-12h-6m-6 0h6"></path>
                            </svg>
                            Add Product
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22,4 12,14.01 9,11.01"></polyline>
            </svg>
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-error">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
            <span>@TempData["ErrorMessage"]</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
    }
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        background: #fff7f0;
        overflow-x: hidden;
    }

    .dashboard-container {
        min-height: 100vh;
        position: relative;
        background: linear-gradient(145deg, #ff6b6b 0%, #ff8e53 50%, #c71585 100%);
    }

    .bg-shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 1;
        pointer-events: none;
    }

    .shape {
        position: absolute;
        border-radius: 30%;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(8px);
        animation: float 8s ease-in-out infinite;
    }

    .shape-1 {
        width: 280px;
        height: 280px;
        top: -5%;
        left: 5%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 180px;
        height: 180px;
        top: 25%;
        right: 5%;
        animation-delay: 2s;
    }

    .shape-3 {
        width: 140px;
        height: 140px;
        bottom: 15%;
        left: 20%;
        animation-delay: 4s;
    }

    .shape-4 {
        width: 100px;
        height: 100px;
        bottom: 25%;
        right: 15%;
        animation-delay: 6s;
    }

    keyframes float {
        0%, 100% {
            transform: translateY(0px) scale(1);
        }
        50% {
            transform: translateY(-30px) scale(1.1);
        }
    }

    .modern-navbar {
        position: relative;
        z-index: 10;
        background: rgba(255, 245, 245, 0.9);
        backdrop-filter: blur(15px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        padding: 1rem 0;
    }

    .navbar-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2rem;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .brand-logo {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        color: #ff6b6b;
        font-weight: 700;
        font-size: 1.3rem;
    }

    .portal-text {
        color: #7b6b9a;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .navbar-actions {
        display: flex;
        align-items: center;
        gap: 1.2rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.5rem 1rem;
        background: rgba(255, 107, 107, 0.1);
        border-radius: 50px;
        color: #2d1b4e;
    }

    .user-avatar {
        width: 30px;
        height: 30px;
        background: #ff6b6b;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .welcome-text {
        font-weight: 500;
        font-size: 0.85rem;
    }

    .logout-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: #ffe5d9;
        color: #2d1b4e;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .logout-btn:hover {
        background: #ff8e53;
        color: white;
        text-decoration: none;
    }

    .dashboard-content {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .header-content {
        background: rgba(255, 245, 245, 0.9);
        backdrop-filter: blur(15px);
        padding: 1.8rem;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .dashboard-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #2d1b4e;
        margin-bottom: 0.6rem;
    }

    .dashboard-subtitle {
        color: #7b6b9a;
        font-size: 1rem;
    }

    .dashboard-grid {
        display: grid;
        gap: 1.8rem;
    }

    .main-actions {
        display: grid;
        gap: 1.8rem;
    }

    .primary-card {
        background: rgba(255, 245, 245, 0.9);
        backdrop-filter: blur(15px);
        padding: 1.8rem;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .primary-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .card-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #ff6b6b 0%, #c71585 100%);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .card-title h3 {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2d1b4e;
        margin-bottom: 0.3rem;
    }

    .card-title p {
        color: #7b6b9a;
        font-size: 0.85rem;
    }

    .card-content {
        margin-bottom: 1.8rem;
    }

    .card-content > p {
        color: #2d1b4e;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .card-features {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #ff6b6b;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .card-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-primary {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #ff6b6b 0%, #c71585 100%);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(255, 107, 107, 0.2);
        color: white;
        text-decoration: none;
    }

    .btn-secondary {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: #ffe5d9;
        color: #2d1b4e;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: #ff8e53;
        color: white;
        text-decoration: none;
    }

    .alert {
        position: fixed;
        top: 1.5rem;
        right: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem 1.2rem;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 500;
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        z-index: 100;
        animation: slideIn 0.3s ease;
        max-width: 380px;
    }

    keyframes slideIn {
        from {
            transform: translateX(100px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .alert-success {
        background: rgba(72, 187, 120, 0.9);
        color: white;
        border-color: rgba(72, 187, 120, 0.3);
    }

    .alert-error {
        background: rgba(229, 62, 62, 0.9);
        color: white;
        border-color: rgba(229, 62, 62, 0.3);
    }

    .alert-close {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        padding: 0.3rem;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        margin-left: auto;
    }

    .alert-close:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    /* Mobile Responsiveness */
    media (max-width: 1024px) {
        .dashboard-content {
            padding: 1.5rem;
        }

        .card-actions {
            flex-direction: column;
        }

        .btn-primary,
        .btn-secondary {
            justify-content: center;
        }
    }

    media (max-width: 768px) {
        .navbar-content {
            padding: 0 1rem;
            flex-direction: column;
            gap: 1rem;
        }

        .navbar-actions {
            width: 100%;
            justify-content: space-between;
        }

        .dashboard-title {
            font-size: 1.8rem;
        }

        .dashboard-subtitle {
            font-size: 0.95rem;
        }

        .header-content {
            padding: 1.5rem;
        }

        .card-features {
            grid-template-columns: repeat(2, 1fr);
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.8rem;
        }

        .alert {
            position: fixed;
            top: 1rem;
            left: 1rem;
            right: 1rem;
            max-width: none;
        }
    }

    media (max-width: 480px) {
        .dashboard-content {
            padding: 1rem;
        }

        .primary-card {
            padding: 1.5rem;
        }

        .user-info {
            padding: 0.5rem 0.8rem;
        }

        .welcome-text {
            font-size: 0.8rem;
        }

        .logout-btn {
            padding: 0.5rem 0.8rem;
            font-size: 0.85rem;
        }

        .card-features {
            grid-template-columns: 1fr;
        }
    }

    /* Animation for floating shapes */
    .shape-1 {
        animation: float 8s ease-in-out infinite;
    }

    .shape-2 {
        animation: float 10s ease-in-out infinite reverse;
    }

    .shape-3 {
        animation: float 12s ease-in-out infinite;
    }

    .shape-4 {
        animation: float 9s ease-in-out infinite reverse;
    }

   keyframes float {
        0%, 100% {
            transform: translateY(0px) scale(1);
        }
        33% {
            transform: translateY(-20px) scale(1.1);
        }
        66% {
            transform: translateY(10px) scale(1.05);
        }
    }

    /* Focus states for accessibility */
    .btn-primary:focus,
    .btn-secondary:focus,
    .logout-btn:focus {
        outline: 2px solid #ff6b6b;
        outline-offset: 2px;
    }

    /* Loading animation for cards */
    .action-card,
    .primary-card {
        animation: fadeInUp 0.6s ease forwards;
    }

    keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>