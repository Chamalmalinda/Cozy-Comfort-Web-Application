@{
    ViewBag.Title = "Customer Dashboard";
}

<div class="dashboard-container">
    <!-- Background Elements -->
    <div class="bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
    </div>

    <!-- Navbar -->
    <nav class="modern-navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <div class="brand-logo">
                    <svg width="32" height="32" viewBox="0 0 48 48" fill="none">
                        <path d="M24 4L44 14V34L24 44L4 34V14L24 4Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                        <path d="M24 4V44" stroke="currentColor" stroke-width="2" />
                        <path d="M4 14L44 34" stroke="currentColor" stroke-width="2" />
                        <path d="M44 14L4 34" stroke="currentColor" stroke-width="2" />
                    </svg>
                    <span>Cozy Comfort</span>
                </div>
                <span class="portal-text">Customer Portal</span>
            </div>
            <div class="navbar-menu">
                <div class="user-info">
                    <div class="user-avatar">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </div>
                    <span class="welcome-text">Welcome, @Session["UserName"]</span>
                </div>
                <a href="@Url.Action("Logout", "Login")" class="logout-btn">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16,17 21,12 16,7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="content-container">
            <!-- Header Section -->
            <div class="dashboard-header">
                <h1 class="dashboard-title">Customer Dashboard</h1>
            </div>

            <!-- Dashboard Cards -->
            <div class="cards-grid">
                <!-- Available Products Card -->
                <div class="dashboard-card card-primary">
                    <div class="card-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="9" cy="21" r="1"></circle>
                            <circle cx="20" cy="21" r="1"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                    </div>
                    <div class="card-content">
                        <h3 class="card-title">Available Products</h3>
                        <p class="card-description">Browse and purchase products from manufacturers</p>
                        <a href="@Url.Action("AvailableProducts", "Customer")" class="card-button">
                            <span>Browse Products</span>
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12h14"></path>
                                <path d="M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Purchase History Card -->
                <div class="dashboard-card card-success">
                    <div class="card-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M12 1v6m0 6v6"></path>
                            <path d="M21 12h-6m-6 0H3"></path>
                        </svg>
                    </div>
                    <div class="card-content">
                        <h3 class="card-title">Purchase History</h3>
                        <p class="card-description">View and manage your previous purchases and orders</p>
                        <a href="@Url.Action("PurchaseHistory", "Customer")" class="card-button">
                            <span>View History</span>
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12h14"></path>
                                601c-4b7c-8f9a-3c2d5e6f7a8b" title="CustomerDashboard.cshtml" contentType="text/html">
                                <path d="M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Section -->
            <div class="quick-actions-section">
                <div class="section-header">
                    <h2 class="section-title">Quick Actions</h2>
                    <p class="section-subtitle">Streamline your workflow with these shortcuts</p>
                </div>
                <div class="quick-actions-grid">
                    <a href="@Url.Action("AvailableProducts", "Customer")" class="quick-action-btn btn-primary">
                        <div class="action-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                        </div>
                        <div>
                            <div class="action-title">New Purchase</div>
                            <div class="action-subtitle">Browse available products</div>
                        </div>
                    </a>
                    <a href="@Url.Action("PurchaseHistory", "Customer")" class="quick-action-btn btn-secondary">
                        <div class="action-icon">
                            <svg width="24" height="24" viewBox=" 0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14,2 14,8 20,8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10,9 9,9 8,9"></polyline>
                            </svg>
                        </div>
                        <div>
                            <div class="action-title">View Orders</div>
                            <div class="action-subtitle">Check order status</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22,4 12,14.01 9,11.01"></polyline>
        </svg>
        <span>@TempData["SuccessMessage"]</span>
        <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-error">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="15" y1="9" x2="9" y2="15"></line>
            <line x1="9" y1="9" x2="15" y2="15"></line>
        </svg>
        <span>@TempData["ErrorMessage"]</span>
        <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
}

<style>
/* Resetting basic styling for all elements */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Setting up font and background */
body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    background: #fff7f0;
    color: #2d1a3f;
    line-height: 1.6;
}

/* Main container with sunset gradient */
.dashboard-container {
    min-height: 100vh;
    position: relative;
    background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 50%, #c71585 100%);
}

/* Background shapes for decorative effect */
.bg-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.shape {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
   backdrop-filter: blur(12px);
    animation: float 8s ease-in-out infinite;
}

.shape-1 {
    width: 320px;
    height: 320px;
    top: 5%;
    left: 5%;
    animation-delay: 0s;
}

.shape-2 {
    width: 220px;
    height: 220px;
    top: 50%;
    right: 10%;
    animation-delay: 2s;
}

.shape-3 {
    width: 160px;
    height: 160px;
    bottom: 10%;
    left: 15%;
    animation-delay: 4s;
}

.shape-4 {
    width: 120px;
    height: 120px;
    top: 30%;
    right: 30%;
    animation-delay: 6s;
}

keyframes float {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    50% {
        transform: translateY(-35px) rotate(180deg);
    }
}

/* Navbar styling */
.modern-navbar {
    position: relative;
    z-index: 3;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1.2rem 0;
}

.navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.navbar-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.brand-logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    color: #ff6b6b;
    font-size: 1.6rem;
    font-weight: 700;
}

.portal-text {
    color: #4a3c5b;
    font-size: 0.95rem;
    font-weight: 500;
}

.navbar-menu {
    display: flex;
    align-items: center;
    gap: 2.2rem;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    color: #2d1a3f;
}

.user-avatar {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, #ff8e53 0%, #c71585 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.welcome-text {
    font-weight: 500;
}

.logout-btn {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.6rem 1.2rem;
    background: rgba(220, 38, 38, 0.15);
    color: #b91c1c;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 500;
    transition: all 0.4s ease;
}

.logout-btn:hover {
    background: rgba(220, 38, 38, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
}

/* Main content styling */
.main-content {
    position: relative;
    z-index: 2;
    padding: 2.5rem 0;
}

.content-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2.5rem;
}

/* Dashboard header styling */
.dashboard-header {
    text-align: center;
    margin-bottom: 3.5rem;
    color: white;
}

.dashboard-title {
    font-size: 3.2rem;
    font-weight: 700;
    margin-bottom: 0.6rem;
    background: linear-gradient(45deg, #ffffff, #f5e7e2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.dashboard-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
}

/* Cards grid styling */
.cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 2.5rem;
    margin-bottom: 3.5rem;
}

.dashboard-card {
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(15px);
    border-radius: 24px;
    padding: 2.5rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.12);
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
}

.dashboard-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
}

.dashboard-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(135deg, #ff8e53 0%, #c71585 100%);
}

.card-primary::before {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.card-success::before {
    background: linear-gradient(135deg, #d97706 0%, #b91c1c 100%);
}

.card-icon {
    width: 64px;
    height: 64px;
    border-radius: 18px;
    background: linear-gradient(135deg, #ff8e53 0%, #c71585 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-bottom: 1.8rem;
}

.card-primary .card-icon {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.card-success .card-icon {
    background: linear-gradient(135deg, #d97706 0%, #b91c1c 100%);
}

.card-content {
    position: relative;
    z-index: 2;
}

.card-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: #2d1a3f;
    margin-bottom: 0.6rem;
}

.card-description {
    color: #4a3c5b;
    margin-bottom: 1.8rem;
    line-height: 1.6;
}

.card-button {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.8rem 1.8rem;
    background: linear-gradient(135deg, #ff8e53 0%, #c71585 100%);
    color: white;
    text-decoration: none;
    border-radius: 14px;
    font-weight: 600;
    transition: all 0.4s ease;
}

.card-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(255, 142, 83, 0.4);
}

/* Quick actions section styling */
.quick-actions-section {
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(15px);
    border-radius: 24px;
    padding: 3rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.12);
}

.section-header {
    text-align: center;
    margin-bottom: 2.5rem;
}

.section-title {
    font-size: 2.2rem;
    font-weight: 700;
    color: #2d1a3f;
    margin-bottom: 0.6rem;
}

.section-subtitle {
    color: #4a3c5b;
    font-size: 1.15rem;
}

.quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.8rem;
}

.quick-action-btn {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    padding: 1.8rem;
    background: #fffaf7;
    border: 2px solid #f3e8e6;
    border-radius: 18px;
    text-decoration: none;
    color: #2d1a3f;
    transition: all 0.4s ease;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
}

.quick-action-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
    border-color: #ff8e53;
}

.btn-primary .action-icon {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.btn-secondary .action-icon {
    background: linear-gradient(135deg, #d97706 0%, #b91c1c 100%);
}

.action-icon {
    width: 52px;
    height: 52px;
    border-radius: 14px;
    background: linear-gradient(135deg, #ff8e53 0%, #c71585 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
}

.action-title {
    font-size: 1.15rem;
    font-weight: 600;
    color: #2d1a3f;
    margin-bottom: 0.3rem;
}

.action-subtitle {
    font-size: 0.95rem;
    color: #4a3c5b;
}

/* Alert styling */
.alert {
    position: fixed;
    top: 2rem;
    right: 2rem;
    z-index: 1000;
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1.2rem 1.8rem;
    border-radius: 14px;
    font-size: 0.95rem;
    font-weight: 500;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
    backdrop-filter: blur(15px);
    max-width: 400px;
    animation: slideIn 0.4s ease-out;
}

keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

.alert-success {
    background: rgba(220, 38, 38, 0.9);
    color: white;
    border: 1px solid rgba(220, 38, 38, 0.25);
}

.alert-error {
    background: rgba(199, 21, 133, 0.9);
    color: white;
    border: 1px solid rgba(199, 21, 133, 0.25);
}

.alert-close {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.3rem;
    border-radius: 6px;
    opacity: 0.8;
    transition: opacity 0.3s ease;
    margin-left: auto;
}

.alert-close:hover {
    opacity: 1;
}

/* Mobile Responsiveness */
media (max-width: 1024px) {
    .dashboard-title {
        font-size: 2.8rem;
    }

    .cards-grid {
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.8rem;
    }

    .content-container {
        padding: 0 1.8rem;
    }
}

media (max-width: 768px) {
    .navbar-container {
        padding: 0 1.2rem;
    }

    .navbar-menu {
        gap: 1.2rem;
    }

    .user-info {
        display: none;
    }

    .dashboard-title {
        font-size: 2.2rem;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
    }

    .cards-grid {
        grid-template-columns: 1fr;
        gap: 1.2rem;
    }

    .dashboard-card {
        padding: 2rem;
    }

    .quick-actions-section {
        padding: 2.5rem;
    }

    .quick-actions-grid {
        grid-template-columns: 1fr;
    }

    .alert {
        right: 1.2rem;
        left: 1.2rem;
        max-width: none;
    }
}

media (max-width: 480px) {
    .brand-logo {
        font-size: 1.3rem;
    }

    .portal-text {
        display: none;
    }

    .dashboard-header {
        margin-bottom: 2.5rem;
    }

    .dashboard-title {
        font-size: 1.8rem;
    }

    .section-title {
        font-size: 1.6rem;
    }

    .quick-action-btn {
        padding: 1.2rem;
    }

    .action-icon {
        width: 44px;
        height: 44px;
    }
}
</style>